{
    "name": "atelierspierrot/patterns",
    "type": "library",
    "description": "A set of PHP classic interfaces and abstract classes patterns.",
    "keywords": [ "php", "patterns", "design patterns" ],
    "homepage": "http://github.com/atelierspierrot/patterns",
    "license": "Apache-2.0",
    "authors": [{
        "name": "Les Ateliers Pierrot & contributors",
        "email": "contact@ateliers-pierrot.fr",
        "homepage": "http://www.ateliers-pierrot.fr/"
    },{
        "name": "Pierre Cassat",
        "homepage": "http://github.com/piwi"
    }],
    "require": { "php": ">=5.3.0" },
    "require-dev": { 
        "sami/sami": "@stable",
        "phpmd/phpmd" : "@stable",
        "fabpot/php-cs-fixer": "@stable"
    },
    "autoload": { "psr-4": {  "Patterns\\": "src/Patterns/" } },
    "scripts": {
        "build-doc": "php vendor/bin/sami.php update .sami.php",
        "update-doc": "php vendor/bin/sami.php update .sami.php",
        "cs-fixer": "php vendor/bin/php-cs-fixer fix -v"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1-dev"
        }
    }
}
